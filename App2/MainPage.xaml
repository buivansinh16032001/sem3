        <Button x:Name="Button" Content="2" HorizontalAlignment="Left" Margin="120, 138, 0, 0" VerticalAlignment="Top" Height="60" Width="116" Click="button_click"/>
        <Button x:Name="Button2" Content="3" HorizontalAlignment="Left" Margin="256, 138, 0, 0" VerticalAlignment="Top" Height="60" Width="124" Click="button2_click"/>
        <Button x:Name="Button3" Content="4" HorizontalAlignment="Left" Margin="-5, 258, 0, 0" VerticalAlignment="Top" Height="92" Width="123" Click="button3_click"/>
        <Button x:Name="Button4" Content="5" HorizontalAlignment="Left" Margin="120, 228, 0, 0" VerticalAlignment="Top" Height="92" Width="131" Click="button4_click"/>
        <Button x:Name="Button5" Content="6" HorizontalAlignment="Left" Margin="251, 228, 0, 0" VerticalAlignment="Top" Height="92" Width="169" Click="button5_click"/>
        <Button x:Name="Button6" Content="7" HorizontalAlignment="Left" Margin="-5, 320, 0, 0" VerticalAlignment="Top" Height="78" Width="115" Click="button6_click"/>
        <Button x:Name="Button7" Content="8" HorizontalAlignment="Left" Margin="110, 320, 0, 0" VerticalAlignment="Top" Height="78" Width="136" Click="button7_click"/>
