        <Button x:Name="Button11" Content="11" RenderTransformOrigin="4.738,2" Margin="251, 351, 0, 0" Height="120" Width="109" Click="button11_click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10, 568, 0, 0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="136" Width="251"/>
        <TextBlock.foreground>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0"/>
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </TextBlock.foreground>
        </TextBlock>
    </Grid>
</Page>
